{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "REPLACE-WITH-GUID",
  "packageName": "com.yourcompany.copilotproxy",
  "developer": {
    "name": "Your Name",
    "websiteUrl": "https://yourdomain.com",
    "privacyUrl": "https://yourdomain.com/privacy",
    "termsOfUseUrl": "https://yourdomain.com/terms"
  },
  "name": {
    "short": "Copilot Proxy",
    "full": "Copilot Proxy Bot"
  },
  "description": {
    "short": "Прокси-бот для интеграции Teams ↔ Power Automate ↔ Copilot",
    "full": "Бот-посредник, который пересылает сообщения между Teams, Power Automate Flow и Copilot Studio."
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "accentColor": "#6264A7",
  "bots": [
    {
      "botId": "REPLACE-WITH-AZURE-APP-ID",
      "scopes": ["personal", "team", "groupchat"],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": ["REPLACE-WITH-YOUR-APP-SERVICE.azurewebsites.net"]
